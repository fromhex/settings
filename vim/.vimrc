set encoding=utf-8 nobomb
set termencoding=utf-8
set fileencodings=utf-8,gbk,utf-16le,cp1252,iso-8859-15,ucs-bom
set fileformats=unix,dos,mac

" set nocompatible
set backspace=indent,eol,start
set number
set tabstop=4
set smartindent
set shiftwidth=4
set expandtab
set hlsearch
set incsearch
set ruler
set ignorecase
set showmatch
set showcmd
set mouse=a

filetype on
syntax on
